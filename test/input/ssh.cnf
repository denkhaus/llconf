(ssh ready
	(and
		(ssh present)
		(ssh configured)
	)
)

(ssh present
	(installed "ssh")
)

(ssh configured
	(and
		(change "sudo" "sed" "-i" "s|[#]*PasswordAuthentication yes|PasswordAuthentication no|g" "/etc/ssh/sshd_config")
		(change "sudo" "sed" "-i" "s|UsePAM yes|UsePAM no|g" "/etc/ssh/sshd_config")
	)
)