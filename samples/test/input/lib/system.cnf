(system restart
	(change "sudo" "shutdown" "-r" "now")
)

(system halt
	(change "sudo" "shutdown" "-h" "now")
)

(system update
    (and
        (change "sudo" "apt-get" "update")
        (change "sudo" "apt-get" "--yes" "upgrade")
        (change "sudo" "apt-get" "--yes" "dist-upgrade")
		(change "sudo" "apt-get" "--yes" "autoclean")
	)
)