(git ready
    (and
        (git installed)
        (git configured)
    )
)

(git installed
  (installed "git")
)

(git configured
    (and  
		(change "git" "config" "--global" "user.name" "peristaltic")
        (change "git" "config" "--global" "user.email" "peristaltic@gmx.net")         
        (change "git" "config" "--global" "core.excludesfile" "~/.gitignore")
    )
)
